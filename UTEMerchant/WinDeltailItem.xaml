<Window x:Class="UTEMerchant.WinDeltailItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"            
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"    
        xmlns:local="clr-namespace:UTEMerchant"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="WinDeltailItem" Height="700" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*"/>
            <ColumnDefinition Width="321*"/>
            <ColumnDefinition Width="208*"/>
        </Grid.ColumnDefinitions>
        <!--Item Image-->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="41*"/>
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                Width="200" 
                Height="200" 
                HorizontalAlignment="Left" 
                BorderThickness="2"
                BorderBrush="Black"
                VerticalAlignment="Center" Margin="44,0,0,0"
                CornerRadius="7">
                <Image x:Name="imgItem" Source="/Img/iPhone-14-Pro-Max-9907.jpg"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform" Margin="7,0,7,0"/>
            </Border>
            <StackPanel Grid.Row="1">
                <Button Grid.Column="0"
                        Height="40"
                        Width="150"
                        Style="{StaticResource addButton}" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Center"                                         
                        HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="TruckDelivery" VerticalAlignment="Center" Margin="0 1 8 0" Width="17" Height="21"/>
                        <TextBlock Text="Buy Now" FontWeight="Bold" FontFamily="Segoe UI" FontSize="15"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="0"
                        Height="40"
                        Width="150"
                        Style="{StaticResource addButton}" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Center"                                         
                        HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Cart" VerticalAlignment="Center" Margin="0 1 8 0" Width="17" Height="21"/>
                        <TextBlock Text="Add To Cart" FontWeight="Bold" FontFamily="Segoe UI" FontSize="15"/>
                    </StackPanel>
                </Button>
            </StackPanel>


        </Grid>

        <!--Grid for Detail Information-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="71"/>
            </Grid.RowDefinitions>
            <!--Item name-->
            <TextBlock
                Grid.Row="0"
                VerticalAlignment="Bottom"
                x:Name="txblItemName"
                TextWrapping="Wrap"             
                TextTrimming="None"
                Text="Iphone 14 Pro Max 512GB"
                FontFamily="Segoe UI Black"
                MaxHeight="95" 
                FontSize="18" Padding="0,0,0,50" Panel.ZIndex="-2" Height="35" Margin="0,4,0,0" />

            <!-- Label for Original Price -->
            <Label               
                FontSize="15"             
                x:Name="lblOr"
                Content="Original price: "
                HorizontalAlignment="Left"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                VerticalContentAlignment="Top"
                HorizontalContentAlignment="Left"
                Padding="0,0,0,0"
                Grid.Row="1" 
                Width="106" 
                BorderThickness="0,0,0,0"                          
                IsHitTestVisible="False" Height="20"/>

            <!--Value for Original Price-->
            <TextBox           
                VerticalAlignment="Center"                     
                Foreground="Black"
                TextDecorations="Strikethrough"
                BorderThickness="0"
                FontSize="15"
                x:Name="txbOriginalPrice"
                Text="100000 $"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="SemiBold" Height="28" Width="219" Padding="5,5,5,5" 
               
                Grid.Row="1" Margin="102,0,0,0"                         
              />

            <!-- Label for Type  -->
            <Label               
                FontSize="15"             
                x:Name="lblType"
                Content="Type: "
                HorizontalAlignment="Left"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                VerticalContentAlignment="Top"
                HorizontalContentAlignment="Left"
                Padding="0,0,0,0"
                Grid.Row="2" 
                Width="106" 
                BorderThickness="0,0,0,0"                          
                IsHitTestVisible="False" Height="20"/>

            <!--Value for Type -->
            <TextBox           
                VerticalAlignment="Top"                     
                Foreground="Black"              
                BorderThickness="0"
                FontSize="15"
                x:Name="txbType"
                Text="Mobile Phone"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="SemiBold" Height="28" Width="219" Padding="5,5,5,5"                
                Grid.Row="2"                         
              />

            <!-- Label for Condition  -->
            <Label               
                FontSize="15"             
                x:Name="lblCondition"
                Content="Condition: "
                HorizontalAlignment="Left"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                VerticalContentAlignment="Top"
                HorizontalContentAlignment="Left"
                Padding="0,0,0,0"
                Grid.Row="3" 
                Width="106" 
                BorderThickness="0,0,0,0"                          
                IsHitTestVisible="False" Height="20"/>

            <!--Value for Condition-->
            <TextBox           
                VerticalAlignment="Top"                     
                Foreground="Black"              
                BorderThickness="0"
                FontSize="15"
                x:Name="txbConditon"
                Text="95%"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="SemiBold" Height="28" Width="219" Padding="5,5,5,5"                
                Grid.Row="3" Margin="0,2,0,0"                         
                
              />

            <!-- Label for BoughtDate  -->
            <Label               
                FontSize="15"             
                x:Name="lblBoughtDate"
                Content="Bought Date: "
                HorizontalAlignment="Left"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                VerticalContentAlignment="Top"
                HorizontalContentAlignment="Left"
                Padding="0,0,0,0"
                Grid.Row="4" 
                Width="106" 
                BorderThickness="0,0,0,0"                          
                IsHitTestVisible="False" Height="20"/>

            <!--Value for BoughtDate-->
            <TextBox           
                 VerticalAlignment="Top"                     
                Foreground="Black"              
                BorderThickness="0"
                FontSize="15"
                x:Name="txbBughtDate"
                Text="22/11/2023"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="SemiBold" Height="28" Width="219" Padding="5,5,5,5"                
                Grid.Row="4" Margin="0,2,0,0"                        
              />

            <!-- Label for Condition Description  -->
            <Label Grid.Row="5"
                   x:Name="lblConditionDescription"
                   Content="Condition description"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontFamily="Segoe UI"
                   FontWeight="SemiBold"
                   FontSize="15"                   
                   Foreground="Black" Padding="0,5,5,5"/>

            <!--Value for Condition Description-->
            <RichTextBox x:Name="rtbConditonDescription"                                     
                         Foreground="black"
                         IsReadOnly="True"
                         Background="Transparent"
                         HorizontalAlignment="Center"
                         Grid.Row="5"
                         Width="301"                                    
                         BorderThickness="0.8"
                         BorderBrush="DarkGray" 
                         Focusable="False"
                         FontFamily="Segoe UI"                          
                         Margin="0,31,0,0" Height="109" VerticalAlignment="Top"   />

            <!-- Label for Detail Description  -->
            <Label
                Grid.Row="6"
                FontSize="15"
                x:Name="lblDetailDescription"
                Content="Detail description"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                FontFamily="Segoe UI"
                FontWeight="SemiBold"
                Foreground="Black" 
                Height="35" 
                Width="140" RenderTransformOrigin="0.512,1.047"/>

            <!--Value for Detail Description-->
            <RichTextBox x:Name="rtbDetailDescription"                                                
                         HorizontalAlignment="Center"
                         Foreground="black"
                         Background="Transparent"
                         Grid.Row="6"
                         IsReadOnly="True"
                         BorderThickness="0.8"
                         BorderBrush="DarkGray" 
                         Focusable="True"
                         FontFamily="Segoe UI" Width="301" Margin="0,35,0,-218"/>


        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="155*"/>
                <RowDefinition Height="41*"/>
                <RowDefinition Height="58*"/>
                <RowDefinition Height="430.04"/>
            </Grid.RowDefinitions>

            <!--Seller Avartar-->
            <Border
                Width="134" 
                Height="128" 
                Padding="3" 
                Background="Black" 
                CornerRadius="100" 
                DockPanel.Dock="Top" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Ellipse>
                    <Ellipse.Fill>
                        <ImageBrush x:Name="imgSellerAvartar" ImageSource="/Img/iPhone-14-Pro-Max-9907.jpg"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Border>

            <!--Seller Name-->
            <TextBox           
                VerticalAlignment="Center"                     
                Foreground="Black"              
                BorderThickness="0"
                FontSize="20"
                x:Name="txbSellerName"
                Text="Vu Nguyen"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Top"
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="ExtraBold" Height="42" Width="208" Padding="5,5,5,5" Grid.Row="1"                     
              />
            <!--Seller Contact-->
            <TextBox           
                VerticalAlignment="Center"                     
                Foreground="Black"              
                BorderThickness="0"
                FontSize="18"
                x:Name="txbSellerContact"
                Text="0327521953"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Top"
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="Bold"
                Height="32" Width="220" 
                Padding="5,5,5,5" 
                Grid.Row="2"                     
              />
            <!--Seller Address-->
            <TextBox           
                VerticalAlignment="Top"                     
                Foreground="Black"              
                BorderThickness="0"
                FontSize="12"
                x:Name="txbSellerAddress"
                Text="63/49, duong so 10, Tang Nhon Phu B, Thu Duc"
                TextWrapping="WrapWithOverflow"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="SemiBold"
                Height="427" Width="208" 
                Padding="15,5,5,5" 
                Grid.Row="3"                     
              />



        </Grid>
    </Grid>
</Window>

<Window x:Class="UTEMerchant.WinDeltailItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"            
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"    
        xmlns:local="clr-namespace:UTEMerchant"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"        
        Title="Item Details" Height="800" Width="1200">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Border CornerRadius="30">

        <Grid Background="#f4f6f8" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="524*"/>
                <ColumnDefinition Width="479*"/>
                <ColumnDefinition Width="197*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="17*"/>


            </Grid.RowDefinitions>
            <!--Item Image-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="97*"/>
                    <RowDefinition Height="63*"/>
                </Grid.RowDefinitions>
                <Border
                Width="532" 
                Height="468" 
                HorizontalAlignment="Center" 
                BorderThickness="0"
                BorderBrush="Black"
                VerticalAlignment="Top"
                CornerRadius="7">
                    <Image x:Name="imgItem" Source="/Img/iPhone-14-Pro-Max-9907.jpg"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform" Margin="7,0,7,0"/>
                </Border>

                <StackPanel Grid.Row="1"  VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Vertical" Margin="15 35 0 0" Height="222" Width="257">
                    <!--<Grid.RowDefinitions>
                    <RowDefinition Height="91"/>
                    <RowDefinition Height="38"/>
                    <RowDefinition/>
                    <RowDefinition Height="0*"/>
                    <RowDefinition Height="383.579"/>
                </Grid.RowDefinitions>-->

                    <!--Seller Avartar-->
                    <DockPanel>

                        <Border
                Width="72" 
                Height="68" 
                Padding="3" 
                Background="Black" 
                CornerRadius="100" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="1,0,5,0">
                            <Ellipse MouseLeftButtonDown="Ellipse_MouseLeftButtonDown" Cursor="Hand">
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="imgSellerAvartar" ImageSource="/Img/kimetsu.jpg"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>
                        <StackPanel Width="194">
                            <!--Seller Name-->
                            <TextBlock                     
                                Foreground="Black"              
                                FontSize="20"
                                x:Name="txbSellerName"
                                Text="Vu Nguyen"  
                                TextAlignment="Left"                
                                FontWeight="Medium" Height="38" Padding="0,5,0,5" Grid.Row="1" Margin="0,0,5,0" MouseLeftButtonDown="txbSellerName_MouseLeftButtonDown" Cursor="Hand"                     
              />

                            <!--Seller Contact-->
                            <TextBlock       
                TextAlignment="Left"                     
                Foreground="Black"              
                FontSize="18"
                x:Name="txbSellerContact"
                Text="0327521953"
                HorizontalAlignment="Center"
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="Medium"
                Height="32" Width="192" 
                Padding="1,1,10,1" 
                Grid.Row="2" Margin="0,1,0,0" Grid.RowSpan="3"                     
              />
                        </StackPanel>

                    </DockPanel>
                    <TextBlock     
                TextAlignment="Left"                     
                Foreground="Black"                              
                FontSize="12"
                x:Name="txbSellerAddress"
                Text="63/49, duong so 10, Tang Nhon Phu B, Thu Duc"
                TextWrapping="WrapWithOverflow"               
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="SemiBold"
                Height="79" Width="254" 
                Padding="1,5,5,5"    
                
              />
                    <!--Seller Address-->



                </StackPanel>


            </Grid>




            <!--Grid for Detail Information-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="140"/>
                    <RowDefinition Height="81"/>
                </Grid.RowDefinitions>
                <!--Item name-->
                <TextBlock
                Grid.Row="0"
                VerticalAlignment="Top"
                x:Name="txblItemName"
                TextWrapping="Wrap"             
                TextTrimming="None"
                Text="Iphone 14 Pro Max 512GB"
                FontFamily="Segoe UI Black"
                MaxHeight="95" 
                FontSize="18" Padding="0,0,0,50" Panel.ZIndex="-2" Height="35" Margin="0,15,0,0" />

                <!-- Label for Original Price -->
                <Label               
                FontSize="15"             
                x:Name="lblOriginalPrice"
                Content="Original price: "
                HorizontalAlignment="Left"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                VerticalContentAlignment="Top"
                HorizontalContentAlignment="Left"
                Padding="0,0,0,0"
                Grid.Row="1" 
                Width="106" 
                BorderThickness="0,0,0,0"                          
                IsHitTestVisible="False" Height="20"/>

                <!--Value for Original Price-->
                <TextBlock           
                VerticalAlignment="Center"                     
                Foreground="Black"
                TextDecorations="Strikethrough"
                FontSize="15"
                x:Name="txbOriginalPrice"
                Text="100000 $"
                HorizontalAlignment="Left"
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="SemiBold"
                Height="28" Width="219" 
                Padding="5,5,5,5"                
                Grid.Row="1" Margin="260,0,0,0"                        
              />


                <!-- Label for Type  -->
                <Label               
                FontSize="15"             
                x:Name="lblType"
                Content="Type: "
                HorizontalAlignment="Left"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                VerticalContentAlignment="Top"
                HorizontalContentAlignment="Left"
                Padding="0,0,0,0"
                Grid.Row="2" 
                Width="106" 
                BorderThickness="0,0,0,0"                          
                IsHitTestVisible="False" Height="20"/>

                <!--Value for Type -->
                <TextBlock       
                VerticalAlignment="Top"                     
                Foreground="Black"              
                FontSize="15"
                x:Name="txbType"
                Text="Mobile Phone"
                HorizontalAlignment="Right"
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="SemiBold" Height="28" Width="219" Padding="5,5,5,5"                
                Grid.Row="2"                         
              />

                <!-- Label for Condition  -->
                <Label               
                FontSize="15"             
                x:Name="lblCondition"
                Content="Condition: "
                HorizontalAlignment="Left"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                VerticalContentAlignment="Top"
                HorizontalContentAlignment="Left"
                Padding="0,0,0,0"
                Grid.Row="3" 
                Width="106" 
                BorderThickness="0,0,0,0"                          
                IsHitTestVisible="False" Height="20"/>

                <!--Value for Condition-->
                <TextBlock                     
                VerticalAlignment="Top"                     
                Foreground="Black"              
                FontSize="15"
                x:Name="txbConditon"
                Text="95%"
                HorizontalAlignment="Right"                              
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="SemiBold" Height="28" Width="219" Padding="5,5,5,5"                
                Grid.Row="3" Margin="0,2,0,0"                         
                
              />

                <!-- Label for BoughtDate  -->
                <Label               
                FontSize="15"             
                x:Name="lblBoughtDate"
                Content="Bought Date: "
                HorizontalAlignment="Left"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                VerticalContentAlignment="Top"
                HorizontalContentAlignment="Left"
                Padding="0,0,0,0"
                Grid.Row="4" 
                Width="106" 
                BorderThickness="0,0,0,0"                          
                IsHitTestVisible="False" Height="20"/>

                <!--Value for BoughtDate-->
                <TextBlock  
                VerticalAlignment="Top"                     
                Foreground="Black"                           
                FontSize="15"
                x:Name="txbBughtDate"
                Text="22/11/2023"
                HorizontalAlignment="Right"                              
                RenderTransformOrigin="0.799,0.479"                  
                FontWeight="SemiBold" Height="28" Width="219" Padding="5,5,5,5"                
                Grid.Row="4" Margin="0,2,0,0"                        
              />

                <!-- Label for Condition Description  -->
                <Label Grid.Row="5"
                   x:Name="lblConditionDescription"
                   Content="Condition description"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontFamily="Segoe UI"
                   FontWeight="SemiBold"
                   FontSize="15"                   
                   Foreground="Black" Padding="0,5,5,5" Height="30" Width="152"/>

                <!--Value for Condition Description-->
                <RichTextBox x:Name="rtbConditonDescription"                                     
                         Foreground="black"
                         IsReadOnly="True"
                         Background="Transparent"
                         HorizontalAlignment="Center"
                         Grid.Row="5"
                         Width="369"                                    
                         BorderThickness="0.8"
                         BorderBrush="DarkGray" 
                         Focusable="False"
                         FontFamily="Segoe UI" Height="110" VerticalAlignment="Top" Margin="0,30,0,0"  >
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Border }">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </RichTextBox.Resources>
                </RichTextBox>

                <StackPanel Grid.Row="6" Margin="0,0,0,-243">

                    <!-- Label for Detail Description  -->
                    <Label
                         Grid.Column="1"
                         FontSize="15"
                         x:Name="lblDetailDescription"
                         Content="Detail description"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Left"
                         FontFamily="Segoe UI"            
                         FontWeight="SemiBold"
                         Foreground="Black" 
                         Height="35" 
                         Width="140"
                         RenderTransformOrigin="0.512,1.047" 
                          />
                    <!--Value for Detail Description-->
                    <RichTextBox 
                         x:Name="rtbDetailDescription"    
                         Grid.Row="0"
                         Grid.Column="1"
                         HorizontalAlignment="Center"
                         Foreground="black"
                         Background="Transparent"                       
                         IsReadOnly="True"                         
                         BorderThickness="1"
                        VerticalAlignment="Top" Margin="0,0,0,5"
                         BorderBrush="LightGray" 
                         Focusable="False"
                         FontFamily="Segoe UI" Width="369"  Padding="5,5,0,5" Height="160">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Border }">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                    <StackPanel Grid.Column="1" Grid.Row="7" >

                        <TextBlock 
               
                    x:Name="txtItemPrice"
                    TextWrapping="WrapWithOverflow"                  
                    Text=" 700 $"
                    HorizontalAlignment="Left"                   
                    FontSize="30"                   
                    FontWeight="Bold"
                    Foreground="red"
                    Grid.Row="6"                    
                    Width="466"                 
                    Padding="0,3,0,0" Margin="0,0,0,7"  />

                        <DockPanel Grid.Row="2" Margin="0,10,0,-95" Height="91" >


                            <Button x:Name="btnBuyNow"
                        Grid.Column="0"
                        Height="40"
                        Width="150"
                        Style="{StaticResource addButton}" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"                                         
                        HorizontalContentAlignment="Center"  Click="btnBuyNow_Click" Grid.ColumnSpan="2" >
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="TruckDelivery" VerticalAlignment="Center" Margin="0 1 8 0" Width="17" Height="21"/>
                                    <TextBlock Text="Buy Now" FontWeight="Bold" FontFamily="Segoe UI" FontSize="15"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1"
                        Height="40"
                        Width="150"
                        Style="{StaticResource addButton}" 
                        VerticalAlignment="Center"                                         
                        HorizontalContentAlignment="Center"  >
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="HeartPlus" VerticalAlignment="Center" Margin="0 1 8 0" Width="17" Height="21"/>
                                    <TextBlock Text="Add To WishList" FontWeight="Bold" FontFamily="Segoe UI" FontSize="15"/>
                                </StackPanel>
                            </Button>
                        </DockPanel>
                    </StackPanel>


                </StackPanel>



            </Grid>
            <Image Source="Img/icons8-close-50.png" x:Name="iconClose" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top"    Height="42"  Margin="0 5 10 0"  RenderTransformOrigin="-0.574,0.6"  Width="34" MouseUp="iconClose_MouseUp_1"/>


        </Grid>
    </Border>
</Window>
